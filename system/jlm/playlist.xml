		<variations>
			<variation>NoOptions</variation>
		</variations>
		<command>$(SYSTEMTEST_CMD_TEMPLATE) -test=TestJlmLocal; \
	$(TEST_STATUS)</command>
		<subsets>
			<subset>8</subset>
		</subsets>
		<levels>
			<level>sanity</level>
		</levels>
		<groups>
			<group>system</group>
		</groups>
		<impls>
			<impl>openj9</impl>
			<impl>ibm</impl>
		</impls>
</test>
	
